{
  "name": "@krepis/core",
  "version": "0.0.0",
  "description": "Krepis Core - Hexagonal Architecture Framework with DI, Context, and Pipeline",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./context": {
      "types": "./dist/context/index.d.ts",
      "import": "./dist/context/index.js"
    },
    "./di": {
      "types": "./dist/di/index.d.ts",
      "import": "./dist/di/index.js"
    },
    "./pipeline": {
      "types": "./dist/pipeline/index.d.ts",
      "import": "./dist/pipeline/index.js"
    },
    "./cqrs": {
      "types": "./dist/cqrs/index.d.ts",
      "import": "./dist/cqrs/index.js"
    },
    "./uow": {
      "types": "./dist/uow/index.d.ts",
      "import": "./dist/uow/index.js"
    },
    "./events": {
      "types": "./dist/events/index.d.ts",
      "import": "./dist/events/index.js"
    },
    "./specification": {
      "types": "./dist/specification/index.d.ts",
      "import": "./dist/specification/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@krepis/shared": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "krepis",
    "hexagonal",
    "architecture",
    "ddd",
    "cqrs",
    "di",
    "dependency-injection"
  ]
}
