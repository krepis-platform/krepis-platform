{
  "name": "krepis",
  "version": "0.0.0",
  "private": true,
  "description": "Krepis ADaaS Platform - Enterprise-grade Backend Architecture Framework",
  "license": "MIT",
  "author": {
    "name": "Krepis Team",
    "email": "team@krepis.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krepis/krepis.git"
  },
  "homepage": "https://krepis.io",
  "keywords": [
    "backend",
    "framework",
    "hexagonal-architecture",
    "ddd",
    "cqrs",
    "typescript",
    "enterprise",
    "adaas"
  ],
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "=== BUILD ===": "",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:native": "turbo run native:build",
    "dev": "turbo run dev --parallel",

    "=== TEST ===": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",

    "=== QUALITY ===": "",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",

    "=== ARCHITECTURE ===": "",
    "arch:validate": "dependency-cruiser --config .dependency-cruiser.js packages apps",
    "arch:graph": "dependency-cruiser --config .dependency-cruiser.js --output-type dot packages | dot -T svg > docs/architecture/dependency-graph.svg",

    "=== VERSION & RELEASE ===": "",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",

    "=== GIT HOOKS ===": "",
    "prepare": "husky",

    "=== UTILITIES ===": "",
    "clean": "turbo run clean && rm -rf node_modules .turbo coverage",
    "clean:dist": "turbo run clean",
    "clean:full": "pnpm clean && find . -name 'node_modules' -type d -prune -exec rm -rf {} +",

    "=== CLI (Krepis Generator) ===": "",
    "krepis": "pnpm --filter @krepis/cli exec krepis",
    "generate:domain": "pnpm krepis generate:domain"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "dependency-cruiser": "^16.8.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.7.2"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "packages/**/*.ts": [
      "dependency-cruiser --config .dependency-cruiser.js --validate"
    ]
  }
}
