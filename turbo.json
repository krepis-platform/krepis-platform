{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": [
    ".env",
    ".env.local",
    "tsconfig.base.json"
  ],

  "globalEnv": [
    "NODE_ENV",
    "CI",
    "KREPIS_ENV",
    "DATABASE_URL",
    "REDIS_URL"
  ],

  "ui": "tui",

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "package.json",
        "tsconfig.json",
        "tsup.config.ts"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true,
      "persistent": false
    },

    "native:build": {
      "dependsOn": [],
      "inputs": [
        "native/**/*.rs",
        "native/**/Cargo.toml",
        "native/**/Cargo.lock"
      ],
      "outputs": [
        "native/target/**",
        "packages/native/index.node"
      ],
      "cache": true,
      "persistent": false,
      "env": ["CARGO_HOME", "RUSTUP_HOME", "TARGET"]
    },

    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },

    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".eslintrc.*",
        "eslint.config.*"
      ],
      "outputs": [],
      "cache": true
    },

    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "outputs": [],
      "cache": false
    },

    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json"
      ],
      "outputs": [],
      "cache": true
    },

    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "**/*.test.ts",
        "**/*.spec.ts",
        "vitest.config.ts"
      ],
      "outputs": ["coverage/**"],
      "cache": true,
      "env": ["CI", "NODE_ENV"]
    },

    "test:watch": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },

    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": []
    },

    "generate": {
      "dependsOn": ["^build"],
      "cache": false,
      "inputs": ["src/**/*.ts", "templates/**/*"],
      "outputs": []
    }
  }
}
